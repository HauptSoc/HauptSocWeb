@proceedings{:cha,
 abstract = {The trend towards dual-income families can be detected in recent years in many industrialized countries. However, despite the continuing rise in Japanese women's rates of participation in the economy over the period of industrialization and beyond, the notion of gendered division of labour has been seen as ``normal'' in Japanese society. The aim of this paper is to examine whether the determinants of married women's labour force participation have changed over the past several decades. Based upon social survey of national sample in Japan conducted in 1985, 1995, 2005, and 2015, we analyse the income provision-role type of the dual-income couples and examine change/stability of the factors that differentiate couples where the husband provides the majority of the couple's income from equal providers. We find the changing effects of women's own human capital on contribution to household income. On the other hand, the division of labour within households has not changed a lot over the past several decades.},
 year = {2019},
 title = {Changes in Couples' Bread-Winning Patterns and Wife's Economic Role in Japan from 1985 to 2015: Statistical Learning of Complex Data},
